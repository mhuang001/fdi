{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "https://fdi.schemas/dataset/MetaParameter",
    "title": "MetaParameter",
    "definitions": {
	"ParameterType": {
	    "type": ["string", "null"],
	    "desscription": "Type (class, CARD) of the parameter",
	    "enum": [
		"array",
		"binary",  "boolean", "byte",
		"complex",
		"finetime", "float",
		"hex",
		"integer",
		"list",
 		"quaternion",
		"tuple",
 		"short", "string",
 		"vector", "vector2d", "vector3d",
		"", null
 	    ],
 	    "examples": [
		"string", "integer", null
 	    ]
	}
    },

    "properties": {
	"description": {
	    "type": ["string", "null"],
	    "default": {"type": "null"},
	    "examples": [
		"Something about this parameter.", null
	    ]
	},
	"valid": {
	    "description": "Allowed value or range of this parameter.",
	    "anyOf": [
		{
		"type": "array",
		"items": {
		    "type": "array",
		    "maxItems": 2,
		    "minItems": 2
		} },
		{"type": "null"}
	    ],
	    "default": null,
	    "examples": [
		[["0b11000000", "power status"]]
	    ]
	},
	"type": {
	    "$ref": "#/definitions/ParameterType"
	},
	"listeners": {
	    "anyOf": [
		{"type": "null"},
		{"$ref": "ListenerSet"}
		]
	}
    }
}
